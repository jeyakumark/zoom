<?xml version='1.0' encoding='utf-8'?>

 <widget xmlns = "http://www.w3.org/ns/widgets"
   xmlns:gap = "http://phonegap.com/ns/1.0" 
   id = "com.phonegap.zoom" 
   versionCode = "10" 
   version = "2.0.0" >
   <name>zoom</name>
   <description>zoom</description>
   <gap:splash src="images/splash.png" gap:platform="ios" width="1024" height="768" />
   <gap:splash src="images/splash.png" gap:platform="android" />
   <gap:platform name="ios" />
   <gap:platform name="android" />
   <preference name="android-minSdkVersion" value="14" />
   <preference name="orientation" value="landscape" />
   <preference name="phonegap-version" value="3.6.3" /> 
   <preference name="splash-screen-duration" value="5000"/>
   <preference name="AutoHideSplashScreen" value="true" />
   <preference name="SplashScreen" value="images/splash.png" />
   <preference name="SplashScreenDelay" value="10000" />
   
   <gap:plugin name="org.apache.cordova.camera" version="0.3.2" />
   <gap:plugin name="org.apache.cordova.core.file" />
   <gap:plugin name="org.apache.cordova.core.file-transfer"  />
   <gap:plugin name="org.apache.cordova.dialogs"  />
  </widget>